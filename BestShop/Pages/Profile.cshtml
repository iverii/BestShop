@page
@model BestShop.Pages.ProfileModel
@{
    string? currentFirstname = HttpContext.Session.GetString("firstname");
    string? currentLastname = HttpContext.Session.GetString("lastname");
    string? currentEmail = HttpContext.Session.GetString("email");
    string? currentPhone = HttpContext.Session.GetString("phone");
    string? CurrentAdress = HttpContext.Session.GetString("adress");
    string? currentRole = HttpContext.Session.GetString("role");
    string? currentCreatedAt = HttpContext.Session.GetString("created_at");

}

<h2 class="my-3">Profile</h2>
@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
else if (Model.successMessage.Length > 0)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>@Model.successMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<div class="row mb-2">
    <label class="col-sm-3 col-form-label">First Name</label>
    <div class="col-sm-6">
        <input type="text" readonly class="form-control-plaintext" value="@currentFirstname" />
    </div>
</div>

<div class="row mb-2">
    <label class="col-sm-3 col-form-label">Last Name</label>
    <div class="col-sm-6">
        <input type="text" readonly class="form-control-plaintext" value="@currentLastname" />
    </div>
</div>

<div class="row mb-2">
    <label class="col-sm-3 col-form-label">Email</label>
    <div class="col-sm-6">
        <input type="text" readonly class="form-control-plaintext" value="@currentEmail" />
    </div>
</div>

<div class="row mb-2">
    <label class="col-sm-3 col-form-label">Phone</label>
    <div class="col-sm-6">
        <input type="text" readonly class="form-control-plaintext" value="@currentPhone" />
    </div>
</div>

<div class="row mb-2">
    <label class="col-sm-3 col-form-label">Adress</label>
    <div class="col-sm-6">
        <input type="text" readonly class="form-control-plaintext" value="@CurrentAdress" />
    </div>
</div>

<div class="row mb-2">
    <label class="col-sm-3 col-form-label">First Name</label>
    <div class="col-sm-6">
        <input type="text" readonly class="form-control-plaintext" value="@currentFirstname" />
    </div>
</div>


<div class="row mb-2">
    <label class="col-sm-3 col-form-label">Role</label>
    <div class="col-sm-6">
        <input type="text" readonly class="form-control-plaintext" value="@currentRole" />
    </div>
</div>

<div class="row mb-2">
    <label class="col-sm-3 col-form-label">Created At</label>
    <div class="col-sm-6">
        <input type="text" readonly class="form-control-plaintext" value="@currentCreatedAt" />
    </div>
</div>

<div class="row mb-3">
    <div class="offset-sm-3 col-sm-6">
        <button class="btn btn-primary" type="button" data-bs-toggle="modal" data-bs-target="#EditModal">Edit</button>
    </div>
</div>


<div class="modal fade" id="EditModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Profile</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">First Name</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Firstname"/>
                            <span asp-validation-for="Firstname" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <label class="col-sm-4 col-form-label">Last Name</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Lastname" />
                            <span asp-validation-for="Lastname" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <label class="col-sm-4 col-form-label">Email</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <label class="col-sm-4 col-form-label">Phone</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Phone" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <label class="col-sm-4 col-form-label">Adress</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Adress" />
                            <span asp-validation-for="Adress" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="offset-sm-4">
                            <button type="submit" class="btn btn-primary" name="action" value="profile">Submit</button>
                        </div>
                    </div>

                    <hr />

                    <div class="row mb-2">
                        <label class="col-sm-4 col-form-label">Password</label>
                        <div class="col-sm-8">
                            <input class="form-control" type="password" asp-for="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <label class="col-sm-4 col-form-label">Confirm Password</label>
                        <div class="col-sm-8">
                            <input class="form-control" type="password" asp-for="ConfirmPassword" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="offset-sm-4">
                            <button type="submit" class="btn btn-primary" name="action" value="password">Submit</button>
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>